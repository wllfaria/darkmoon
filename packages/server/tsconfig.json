{
	"compilerOptions": {
		"experimentalDecorators": true,
		"lib": ["ESNext"],
		"removeComments": true,
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": true,
		"target": "es2017",
		"outDir": "lib",
		"rootDir": "/server"
	},
	"include": ["src/**/*.ts"],
	"exclude": [
		"node_modules/**",
		"node_modules/**/*",
		".serverless/**/*",
		".webpack/**/*",
		"_warmup/**/*",
		".vscode/**/*"
	]
}

